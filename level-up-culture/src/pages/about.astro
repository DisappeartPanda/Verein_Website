---
// src/pages/about.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import AboutSection from "../components/AboutSection.astro";
---

<BaseLayout title="Über uns – Level Up Culture e.V.">
  <div class="page-root">
    <main>
      <section class="section">
        <div class="section-inner section-inner-narrow">
          <h1>Über Level Up Culture e.V.</h1>
          <p class="section-text">
            Hier erfährt man mehr über die Idee hinter dem Verein, die Menschen
            dahinter und wie Level Up Culture e.V. entstanden ist. Den Text kannst
            du später mit euren echten Inhalten füllen.
          </p>
        </div>
      </section>

      <AboutSection />
    </main>
  </div>
</BaseLayout>
