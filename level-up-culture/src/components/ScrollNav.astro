<nav class="scroll-nav">
  <div class="scroll-nav-inner">
    <!-- Erste Reihe: 4 Links zentriert -->
    <a href="#about" class="scroll-nav-link">Über uns</a>
    <a href="#angebote" class="scroll-nav-link">Angebot</a>
    <a href="#events" class="scroll-nav-link">Events</a>
    <a href="#mitgliedschaft" class="scroll-nav-link">Mitgliedschaft</a>

    <!-- Zweite Reihe: Kontakt, spannt 2 Spalten (mittig) -->
    <a href="#kontakt" class="scroll-nav-contact">
      Kontakt
    </a>
  </div>
</nav>

<script>
  if (typeof window !== "undefined") {
    const nav = document.querySelector(".scroll-nav");

    const onScroll = () => {
      if (!nav) return;
      const showAfter = 220; // ab wieviel Pixel Scroll die Nav erscheinen soll
      if (window.scrollY > showAfter) {
        nav.classList.add("scroll-nav--visible");
      } else {
        nav.classList.remove("scroll-nav--visible");
      }
    };

    window.addEventListener("scroll", onScroll);
    onScroll();
  }
</script>

<style>
  .scroll-nav {
    position: sticky;
    top: 0;
    z-index: 40;
    opacity: 0;
    pointer-events: none;
    transform: translateY(-18px);
    transition:
      opacity 0.2s ease,
      transform 0.2s ease,
      box-shadow 0.2s ease,
      background 0.2s ease;
  }

  .scroll-nav--visible {
    opacity: 1;
    pointer-events: auto;
    transform: translateY(0);
    background: rgba(255, 255, 255, 0.96);
    box-shadow: 0 14px 30px rgba(15, 23, 42, 0.16);
    backdrop-filter: blur(10px);
  }

  .scroll-nav-inner {
    max-width: 640px;
    margin: 0.75rem auto 0.8rem;
    padding: 0.75rem 1.2rem;
    border-radius: 999px;
    border: 1px solid rgba(148, 163, 184, 0.4);
    background: #f9fafb;

    display: grid;
    grid-template-columns: repeat(4, auto);
    justify-content: center;
    row-gap: 0.6rem;
    column-gap: 1.2rem;
    align-items: center;
  }

  .scroll-nav-link {
    font-size: 0.9rem; /* gleich groß wie Navbar & Name */
    font-weight: 500;
    color: var(--text-muted);
    text-decoration: none;
    padding-bottom: 0.1rem;
    border-bottom: 2px solid transparent;
  }

  .scroll-nav-link:hover {
    color: var(--accent);
    border-bottom-color: var(--accent-soft);
  }

  /* Kontakt spannt zwei Spalten in der Mitte */
  .scroll-nav-contact {
    grid-column: 2 / span 2;
    justify-self: center;
    width: 100%;

    font-size: 0.95rem;
    font-weight: 600;
    text-align: center;
    text-decoration: none;

    padding: 0.6rem 1.4rem;
    border-radius: 999px;
    background: linear-gradient(135deg, #2563eb, #4f46e5);
    color: #f9fafb;
    box-shadow: 0 14px 30px rgba(37, 99, 235, 0.35);
    border: 1px solid rgba(37, 99, 235, 0.5);
  }

  .scroll-nav-contact:hover {
    box-shadow: 0 18px 40px rgba(37, 99, 235, 0.45);
    transform: translateY(-1px);
  }

  /* Mobile: alles untereinander */
  @media (max-width: 640px) {
    .scroll-nav-inner {
      border-radius: 1.25rem;
      grid-template-columns: 1fr;
      row-gap: 0.4rem;
    }

    .scroll-nav-contact {
      grid-column: 1;
      width: 100%;
    }
  }
</style>
