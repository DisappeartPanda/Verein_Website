<header class="hero">
  <div class="hero-inner">

    <!-- Split Hero -->
    <div class="hero-grid">
      <div class="hero-copy">

        <h1 class="hero-title">
          Gemeinsam Kultur &amp; Gaming
          <span class="hero-title-highlight">auf das nächste Level bringen.</span>
        </h1>

      

        <div class="hero-actions">
          <a href="#mitgliedschaft" class="btn btn-primary">
            Mitglied werden
          </a>
          <a href="#events" class="btn btn-secondary">Nächste Events ansehen</a>
        </div>
      </div>

      <!-- "Produkt"-Card rechts (Mockup wie bei Perspective) -->
      <div class="hero-visual">
        <div class="hero-device-shadow" aria-hidden="true"></div>
        <div class="hero-device">
          <div class="hero-device-header">
            <span class="hero-device-pill">Nächstes Event</span>
            <span class="hero-device-status">Plätze verfügbar</span>
          </div>

          <div class="hero-device-body">
            <div class="hero-device-event">
              <h2>Open Community Night</h2>
              <p>Jeden Freitag · 18:00 – 22:00 Uhr</p>
              <ul>
                <li>Gaming-Stationen &amp; kleine Turniere</li>
                <li>Kreativ-Ecke für eigene Projekte</li>
                <li>Raum zum Ankommen &amp; Chillen</li>
              </ul>
            </div>

            <div class="hero-device-card">
              <div>
                <span class="hero-device-label">Teilnehmende letzte Woche</span>
                <strong>27</strong>
              </div>
              <div class="hero-device-chip">Jugendzentrum</div>
            </div>

            <button class="btn btn-primary hero-device-cta">
              Ich möchte teilnehmen
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  if (typeof window !== "undefined") {
    const onScroll = () => {
      const nav = document.querySelector(".hero-nav");
      if (!nav) return;

      if (window.scrollY > 40) {
        nav.classList.add("hero-nav--fixed");
      } else {
        nav.classList.remove("hero-nav--fixed");
      }
    };

    window.addEventListener("scroll", onScroll);
    onScroll();
  }
</script>

<style>
  .hero {
  position: relative;
}

/* … darunter neu: */
.hero::before {
  content: "";
  position: absolute;
  inset: -40%;
  background:
    radial-gradient(circle at top left, rgba(37, 99, 235, 0.08), transparent 60%),
    radial-gradient(circle at bottom right, rgba(79, 70, 229, 0.06), transparent 60%);
  z-index: -1;
}


  .hero-inner {
    max-width: 1120px;
    margin: 0 auto;
  }

  /* NAVIGATION */
  .hero-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 1.5rem;

  /* Abstand nach oben/unten im normalen Zustand */
  padding: 0 0 2.8rem;

  transition:
    background 0.2s ease,
    box-shadow 0.2s ease,
    padding 0.2s ease,
    border-radius 0.2s ease,
    transform 0.2s ease;
}

.hero-nav--fixed {
  position: fixed;
  top: 0.75rem;
  left: 50%;
  transform: translateX(-50%);

  /* gleiche seitliche Abstände wie dein Layout (2rem gesamt) */
  width: min(100% - 3rem, 1120px);

  padding: 0.55rem 1.3rem;
  border-radius: 999px;

  background: rgba(255, 255, 255, 0.97);
  box-shadow: 0 14px 30px rgba(15, 47, 70, 0.22);
  z-index: 80;
}




  .hero-brand-horizontal {
  display: flex;
  align-items: center;
  gap: 1rem;
}



 .hero-logo-mega {
  width: 68px;     /* ✅ ca. 2× so groß wie Nav & Name */
  height: 68px;
  border-radius: 999px;
  background: #ffffff;
  border: 2px solid rgba(37, 99, 235, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8px;
  box-shadow:
    0 12px 30px rgba(15, 23, 42, 0.25),
    0 0 0 8px rgba(37, 99, 235, 0.08);
  position: relative;
}


/* Mega-Glow */
.hero-logo-mega::before {
  content: "";
  position: absolute;
  inset: -34px;
  border-radius: inherit;
  background: radial-gradient(
    circle,
    rgba(37, 99, 235, 0.45),
    rgba(79, 70, 229, 0.0) 70%
  );
  filter: blur(18px);
  z-index: -1;
}


  .hero-brand-text-horizontal {
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 0.15rem;
}


.hero-brand-name {
  font-weight: 800;
  font-size: 1.6rem;
  letter-spacing: 0.04em;
}

.hero-brand-tagline-inline {
  font-size: 0.75rem;
  font-weight: 600;
  letter-spacing: 0.25em;
  text-transform: uppercase;
  color: var(--text-muted);
  line-height: 1.1;
}



  .hero-nav-links {
    display: none;
    align-items: center;
    gap: 1.3rem;
    font-size: 1.2rem;
  }

  .hero-nav-links a {
    color: var(--text-muted);
  }

  .hero-nav-links a:hover {
    color: var(--accent);
  }

  @media (min-width: 880px) {
    .hero-nav-links {
      display: flex;
    }
  }

  .hero-nav-cta {
    font-size: 0.9rem;
    padding-inline: 1rem;
  }

  /* SPLIT HERO */
  .hero-grid {
    display: grid;
    grid-template-columns: minmax(0, 1.1fr);
    gap: 2.3rem;
    align-items: center;
    margin-top: 0.5rem;
  }

  @media (min-width: 960px) {
    .hero-grid {
      grid-template-columns: minmax(0, 1.1fr) minmax(0, 1fr);
    }
  }

  .hero-copy {
    max-width: 560px;
  }

  .hero-title {
  margin: 1.4rem 0 1rem;
  font-size: clamp(2.6rem, 4vw + 1.8rem, 3.8rem);
  letter-spacing: 0.02em;
  line-height: 1.1;
}


  .hero-title-highlight {
    display: block;
  }

  .hero-subtitle {
    margin: 0 0 1.4rem;
    font-size: 1rem;
    color: var(--text-muted);
    line-height: 1.7;
  }

  .hero-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 0.9rem;
  margin: 1.4rem 0 1.2rem;
}



  .hero-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: var(--text-muted);
    align-items: center;
  }

  .hero-meta-dot {
    opacity: 0.5;
  }

  /* DEVICE CARD – inspiriert von Perspective */
  .hero-visual {
    position: relative;
    display: flex;
    justify-content: center;
  }

  .hero-device-shadow {
    position: absolute;
    inset: 20% 8% -5%;
    background: radial-gradient(circle at 20% 0, rgba(37, 99, 235, 0.25), transparent),
      radial-gradient(circle at 80% 100%, rgba(79, 70, 229, 0.35), transparent);
    filter: blur(24px);
    opacity: 0.9;
    z-index: 0;
  }

  .hero-device {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 360px;
    border-radius: 1.8rem;
    padding: 1.3rem 1.2rem 1.5rem;
    background: #ffffff;
    box-shadow: 0 26px 70px rgba(15, 23, 42, 0.22);
    border: 1px solid rgba(148, 163, 184, 0.4);
  }

  .hero-device-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    font-size: 0.8rem;
  }

  .hero-device-pill {
    padding: 0.2rem 0.7rem;
    border-radius: 999px;
    background: #eff6ff;
    color: #1d4ed8;
    font-weight: 500;
  }

  .hero-device-status {
    color: #16a34a;
    font-weight: 500;
  }

  .hero-device-body {
    display: grid;
    gap: 1rem;
  }

  .hero-device-event h2 {
    margin: 0 0 0.2rem;
    font-size: 1.1rem;
  }

  .hero-device-event p {
    margin: 0 0 0.6rem;
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  .hero-device-event ul {
    margin: 0;
    padding-left: 1.1rem;
    font-size: 0.85rem;
    color: var(--text-muted);
    display: grid;
    gap: 0.2rem;
  }

  .hero-device-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.65rem 0.8rem;
    border-radius: 0.9rem;
    background: #f9fafb;
    border: 1px solid var(--border-soft);
    font-size: 0.85rem;
  }

  .hero-device-label {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .hero-device-card strong {
    display: block;
    font-size: 1rem;
  }

  .hero-device-chip {
    padding: 0.2rem 0.65rem;
    border-radius: 999px;
    background: #eef2ff;
    color: #4338ca;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .hero-device-cta {
    width: 100%;
    justify-content: center;
    font-size: 0.9rem;
    padding-block: 0.7rem;
  }

  /* TRUST BAR */
  .hero-trust {
    margin-top: 2.4rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(148, 163, 184, 0.4);
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  @media (min-width: 720px) {
    .hero-trust {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
  }

  .hero-trust-logos {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
    font-weight: 500;
  }

  @media (max-width: 640px) {
  .hero-logo-strong {
    width: 110px;
    height: 110px;
    padding: 14px;
  }

  .hero-brand-name {
    font-size: 1.25rem;
  }
}

.hero-brand-textonly {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.6rem;
  margin-bottom: 2.6rem;
  text-align: center;
}

@media (max-width: 640px) {
  .hero-logo-mega {
    width: 120px;
    height: 120px;
    padding: 14px;
  }
}

.hero-brand-name-inline {
  font-size: 0.9rem;        /* ✅ EXAKT NAVBAR-GRÖSSE */
  font-weight: 700;
  letter-spacing: 0.08em;
  text-transform: uppercase;
  color: var(--text-main);
  line-height: 1.1;
}



</style>
