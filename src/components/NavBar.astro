<nav class="main-nav">
  <div class="main-nav-inner">
    <!-- Brand -->
   <a href="/" class="nav-brand nav-home-link">
  <div class="nav-logo">
    <img src="/logo-verein.svg" alt="Level Up Culture Logo" />
  </div>
  <span class="nav-name">Level Up Culture </span>
</a>


    <!-- Links -->
    <div class="nav-links">
      <a href="/about">Über uns</a>
      <a href="/events">Events</a>
      <a href="/mitgliedsantrag">Mitgliedschaft</a>
      <a href="/#kontakt" class="btn btn-secondary">Kontakt</a>
    </div>
  </div>
</nav>

<script>
  if (typeof window !== "undefined") {
    const nav = document.querySelector(".main-nav");
    const homeLink = document.querySelector(".nav-home-link");

    const onScroll = () => {
      if (!nav) return;
      if (window.scrollY > 40) {
        nav.classList.add("main-nav--compact");
      } else {
        nav.classList.remove("main-nav--compact");
      }
    };

    if (homeLink) {
      homeLink.addEventListener("click", (e) => {
        const isHome =
          window.location.pathname === "/" ||
          window.location.pathname === "/index";

        if (isHome) {
          e.preventDefault();
          window.scrollTo({
            top: 0,
            behavior: "smooth",
          });
        }
      });
    }

    window.addEventListener("scroll", onScroll);
    onScroll();
  }
</script>



<style>
  /* Grund-Navbar: nimmt Platz ein, Seite springt nicht */
  .main-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 90;
  background: transparent;
  pointer-events: none; /* wichtig: nur der Inhalt fängt Klicks, nicht die volle Fläche */
}

.main-nav-inner {
  max-width: 1120px;
  margin: 0 auto;
  padding: 2.2rem 1.5rem 3.2rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 1.8rem;
  box-sizing: border-box;
  transition:
    padding 0.2s ease,
    margin 0.2s ease,
    border-radius 0.2s ease,
    box-shadow 0.2s ease,
    background 0.2s ease,
    transform 0.2s ease;
  pointer-events: auto; /* Klicks wieder aktiv */
}

/* Kompakt-Pille beim Scrollen – bleibt jetzt fix oben */
.main-nav.main-nav--compact .main-nav-inner {
  margin-top: 0.4rem;
  margin-bottom: 0.4rem;
  padding: 0.35rem 1.3rem;
  border-radius: 999px;
  background: rgba(255, 255, 255, 0.97);
  box-shadow: 0 10px 24px rgba(15, 23, 42, 0.22);
}



  /* =========
     Brand
  ========= */

  .nav-brand {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .nav-logo {
    width: 75px;
    height: 75px;
    border-radius: 999px;
    background: #ffffff;
    border: 1px solid var(--border-soft);
    padding: 7px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .nav-logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .nav-name {
    font-size: 1.25rem;      /* schön groß */
    font-weight: 800;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--text-main);
    white-space: nowrap;
  }

  /* =========
     Links
  ========= */

.nav-links {
  display: flex;
  align-items: center;
  gap: 2rem;
  flex-wrap: wrap;       /* darf umbrechen statt rauszuschieben */
}


  .nav-links a {
    font-size: 1.15rem;      /* größer & gut lesbar */
    color: var(--text-main);
    text-decoration: none;
    font-weight: 600;
    position: relative;
  }

  .nav-links a::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -5px;
    width: 0%;
    height: 2px;
    background: var(--accent);
    transition: width 0.2s ease;
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  /* =========
     Mobile
  ========= */

  @media (max-width: 760px) {
    .main-nav-inner {
      padding: 1.6rem 1.5rem 2.2rem;
    }

    .main-nav.main-nav--compact .main-nav-inner {
      padding: 0.4rem 1rem;
    }

    .nav-links {
      gap: 1.2rem;
    }

    .nav-links a {
      font-size: 1rem;
    }

    .nav-name {
      display: none; /* nur Logo auf Handy */
    }
  }
</style>

