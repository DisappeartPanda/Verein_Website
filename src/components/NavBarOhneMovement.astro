<nav class="main-nav" id="mainNav">
  <div class="main-nav-inner">
    <!-- Brand -->
    <a href="/" class="nav-brand nav-home-link">
      <div class="nav-logo">
        <img src="/logo-verein.svg" alt="Level Up Culture Logo" />
      </div>
      <span class="nav-name">Level Up Culture - Verein in Gründung</span>
    </a>

    <!-- Links -->
    <div class="nav-links">
      <a href="/about">Über uns</a>
      <a href="/events">Events</a>
      <a href="/mitgliedsantrag">Mitgliedschaft</a>
      <a href="/#kontakt" class="btn btn-secondary">Kontakt</a>
    </div>
  </div>
</nav>

<script is:inline>
  // Optional: Klick auf Logo scrollt auf der Startseite nach oben
  const homeLink = document.querySelector(".nav-home-link");
  if (homeLink) {
    homeLink.addEventListener("click", (e) => {
      const isHome =
        window.location.pathname === "/" ||
        window.location.pathname === "/index";

      if (isHome) {
        e.preventDefault();
        window.scrollTo({
          top: 0,
          behavior: "smooth",
        });
      }
    });
  }
</script>

<style>
  /* =========================
     NAVBAR: STICKY PILL (IMMER)
     ========================= */

  .main-nav {
    position: sticky; /* ✅ klebt oben im Scroll-Kontext */
    top: 0;
    z-index: 10000;

    /* Wir wollen nur die Pille sichtbar, nicht eine volle Leiste */
    background: transparent;

    /* Sticky braucht "eigene Höhe": wir geben etwas Abstand nach oben */
    padding-top: 0.6rem;

    /* klickbar (kein pointer-events hack nötig) */
    pointer-events: auto;
  }

  .main-nav-inner {
    max-width: 1120px;
    margin: 0 auto;
    padding: 0.45rem 1.3rem;

    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.8rem;
    box-sizing: border-box;

    border-radius: 999px;
    background: rgba(255, 255, 255, 0.97);
    box-shadow: 0 10px 24px rgba(15, 23, 42, 0.22);
    backdrop-filter: blur(14px);
  }

  /* =========
     Brand
  ========= */

  .nav-brand {
    display: flex;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
  }

  .nav-logo {
    width: 56px;
    height: 56px;
    border-radius: 999px;
    background: #ffffff;
    border: 1px solid var(--border-soft);
    padding: 7px;

    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .nav-logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .nav-name {
    font-size: 1.05rem;
    font-weight: 800;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--text-main);
    white-space: nowrap;
  }

  /* =========
     Links
  ========= */

  .nav-links {
    display: flex;
    align-items: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .nav-links a {
    font-size: 1.05rem;
    color: var(--text-main);
    text-decoration: none;
    font-weight: 600;
    position: relative;
  }

  .nav-links a::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -5px;
    width: 0%;
    height: 2px;
    background: var(--accent);
    transition: width 0.2s ease;
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  /* =========
     Mobile
  ========= */

  @media (max-width: 760px) {
    .main-nav {
      padding-top: 0.5rem;
    }

    .main-nav-inner {
      padding: 0.5rem 0.95rem;
      gap: 1.2rem;
    }

    .nav-links {
      gap: 1.1rem;
    }

    .nav-links a {
      font-size: 1rem;
    }

    .nav-name {
      display: none;
    }

    .nav-logo {
      width: 48px;
      height: 48px;
    }
  }
</style>
