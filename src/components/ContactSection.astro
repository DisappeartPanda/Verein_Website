<script>
  if (typeof window !== "undefined") {
    const form = document.getElementById("contact-form");
    const statusEl = document.getElementById("contact-status");

    const SCRIPT_URL =
      "https://script.google.com/macros/s/AKfycbwzCp1csHRbo3Wcl2N9T4mnjBtOPhuQznP-t9gzwEL-mYvT5xcLinJ-dvNltmeSjuWl9w/exec"; // üî• Hier deine Script-URL einf√ºgen

    form?.addEventListener("submit", async (event) => {
      event.preventDefault();
      if (!form) return;

      statusEl.textContent = "Sende Nachricht‚Ä¶";

      try {
        const formData = new FormData(form);

        await fetch(SCRIPT_URL, {
          method: "POST",
          body: formData, // üî• kein Content-Type, kein JSON ‚Üí kein CORS-Preflight
        });

        form.reset();
        statusEl.textContent = "‚úÖ Nachricht erfolgreich gesendet!";
      } catch (err) {
        console.error("Kontaktfehler:", err);
        statusEl.textContent =
          "‚ùå Deine Nachricht konnte nicht gesendet werden. Bitte probier es sp√§ter noch einmal.";
      }
    });
  }
</script>


 
