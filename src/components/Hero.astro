<script>
  if (typeof window !== "undefined") {
    const onScroll = () => {
      const nav = document.querySelector(".hero-nav");
      if (!nav) return;

      if (window.scrollY > 40) {
        nav.classList.add("hero-nav--fixed");
      } else {
        nav.classList.remove("hero-nav--fixed");
      }
    };

    window.addEventListener("scroll", onScroll);
    onScroll();
  }

  if (typeof window !== "undefined") {
    const COUNT_KEY = "hero_participant_count";
    const CLICKED_KEY = "hero_has_clicked";

    const countEl = document.getElementById("participant-count");
    const btn = document.getElementById("participate-btn");

    let count = Number(localStorage.getItem(COUNT_KEY) || 0);
    const hasClicked = localStorage.getItem(CLICKED_KEY) === "true";

    // Initial anzeigen
    countEl.textContent = count;

    if (hasClicked) {
      btn.disabled = true;
      btn.textContent = "Teilnahme gespeichert";
      btn.style.opacity = "0.6";
      btn.style.cursor = "not-allowed";
    }

    btn.addEventListener("click", () => {
      if (localStorage.getItem(CLICKED_KEY) === "true") return;

      count += 1;
      localStorage.setItem(COUNT_KEY, count);
      localStorage.setItem(CLICKED_KEY, "true");

      countEl.textContent = count;

      btn.disabled = true;
      btn.textContent = "Teilnahme gespeichert";
      btn.style.opacity = "0.6";
      btn.style.cursor = "not-allowed";
    });
  }


</script>

