  <style>
    .page-legal {
      min-height: 100vh;
      max-width: 900px;
      margin: 0 auto;
      padding: 6rem 1.5rem 4rem;
      background: var(--bg-page);
    }

    .legal-card {
      background: var(--bg-surface);
      border-radius: var(--radius-lg);
      border: 1px solid var(--border-soft);
      box-shadow: var(--shadow-soft);
      padding: 2.2rem 2.1rem 2rem;
    }

    .legal-header {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
      margin-bottom: 1.8rem;
    }

    .legal-eyebrow {
      text-transform: uppercase;
      letter-spacing: 0.12em;
      font-size: 0.78rem;
      color: var(--text-muted);
    }

    .legal-title {
      font-size: clamp(1.8rem, 2.6vw, 2.2rem);
      margin: 0;
      color: var(--text-main);
    }

    .legal-intro {
      margin: 0.1rem 0 0;
      font-size: 0.95rem;
      color: var(--text-muted);
      max-width: 40rem;
    }

    .legal-grid {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 1.6rem;
      margin-bottom: 1.8rem;
      font-size: 0.95rem;
    }

    @media (max-width: 720px) {
      .legal-grid {
        grid-template-columns: minmax(0, 1fr);
      }
    }

    .legal-section {
      margin-top: 1.4rem;
      font-size: 0.95rem;
      color: var(--text-main);
    }

    .legal-section h2 {
      font-size: 1.05rem;
      margin: 0 0 0.4rem;
      color: var(--text-main);
    }

    .legal-section p {
      margin: 0 0 0.6rem;
      line-height: 1.7;
      color: var(--text-muted);
    }

    .legal-card a {
      color: var(--accent);
      text-decoration: none;
    }

    .legal-card a:hover {
      text-decoration: underline;
    }
  </style>
</BaseLayout>
