---
/**
 * src/pages/flyer.astro
 * Fullscreen Flyer im BaseLayout-Look:
 * - nutzt den Screen deutlich besser (weniger Rand)
 * - stabile Grid-Aufteilung (Header / Content / Footer)
 * - QR gro√ü & optisch zentral, Text sitzt sauber
 * - keine Interaktionen, kein Scrollen
 */
export const prerender = true;

const WEBSITE = "https://levelup-culture.de";
---

<!doctype html>
<html lang="de">
  <head>

    <link rel="icon" href="/favicon.png" sizes="any" />
    <link rel="icon" type="image/png" sizes="192x192" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />

    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />

    <style>
      :root {
        /* ‚úÖ BaseLayout Variablen */
        --brand-dark: #0f2f46;
        --brand-main: #1f6f9c;
        --brand-light: #5fa8d3;
        --brand-soft: #e8f3fb;

        --bg-page: #f4f9fc;
        --bg-surface: #ffffff;
        --bg-soft: var(--brand-soft);

        --text-main: #0f2f46;
        --text-muted: #5b7285;

        --accent: var(--brand-main);
        --accent-soft: rgba(31, 111, 156, 0.15);

        --border-soft: rgba(15, 47, 70, 0.12);
        --shadow-soft: 0 18px 45px rgba(15, 47, 70, 0.15);

        --radius-lg: 1.25rem;

        /* Flyer Tuning */
        --stage-pad: clamp(8px, 1.6vw, 16px);   /* üëà weniger Rand -> mehr Fl√§che */
        --card-pad: clamp(18px, 2.4vw, 36px);
        --gap: clamp(14px, 2vh, 22px);

        --title: clamp(2.3rem, 4.6vw, 4.2rem);
        --lead: clamp(1rem, 1.25vw, 1.18rem);
        --chip: clamp(0.75rem, 0.95vw, 0.9rem);
        --h3: clamp(0.9rem, 1.05vw, 1.05rem);
        --p: clamp(0.95rem, 1.1vw, 1.05rem);
      }

      * { box-sizing: border-box; }
      html, body { height: 100%; }

      body {
        margin: 0;
        font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        background: radial-gradient(circle at top, #e5edff 0, #f9fafb 40%, #f3f4f6 100%);
        color: var(--text-main);
        overflow: hidden; /* ‚úÖ kein Scrollen */
      }

      /* B√ºhne f√ºllt den Screen */
      .stage {
        height: 100svh;
        width: 100%;
        padding: var(--stage-pad);
        display: grid;
        place-items: center;
        position: relative;
      }

      .stage::before {
        content: "";
        position: absolute;
        inset: -35%;
        background:
          radial-gradient(circle at top left, rgba(37, 99, 235, 0.10), transparent 60%),
          radial-gradient(circle at bottom right, rgba(79, 70, 229, 0.08), transparent 60%);
        filter: blur(26px);
        z-index: 0;
      }

      /* Flyer nutzt den Screen deutlich besser */
      .flyer {
        z-index: 1;
        width: min(1400px, 100%);                /* üëà breiter m√∂glich */
        height: 100%;
        max-height: calc(100svh - (2 * var(--stage-pad)));

        background: rgba(255, 255, 255, 0.96);
        border: 1px solid var(--border-soft);
        border-radius: calc(var(--radius-lg) + 0.45rem);
        box-shadow: var(--shadow-soft);
        backdrop-filter: blur(10px);

        padding: var(--card-pad);
        overflow: hidden;

        display: grid;
        grid-template-rows: auto 1fr auto;       /* Header / Content / Footer */
        gap: var(--gap);
      }

      /* HEADER */
      .header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 16px;
        min-width: 0;
      }

      .brand {
        display: flex;
        align-items: center;
        gap: 14px;
        min-width: 0;
      }

      .logo {
        width: clamp(58px, 5vw, 76px);
        height: clamp(58px, 5vw, 76px);
        border-radius: 999px;
        background: linear-gradient(135deg, var(--brand-main), var(--brand-dark));
        color: #fff;
        font-weight: 900;
        display: grid;
        place-items: center;
        font-size: clamp(1.15rem, 2vw, 1.55rem);
        box-shadow: 0 14px 30px rgba(31, 111, 156, 0.35);
        flex: 0 0 auto;
      }

      .brandText { min-width: 0; }
      .brandName {
        margin: 0;
        font-weight: 900;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        font-size: clamp(1.1rem, 1.6vw, 1.55rem);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      .brandTag {
        margin: 0.18rem 0 0;
        font-size: clamp(0.72rem, 0.95vw, 0.86rem);
        letter-spacing: 0.25em;
        text-transform: uppercase;
        color: var(--text-muted);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      .chips {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: flex-end;
      }

      .chip {
        padding: 10px 12px;
        border-radius: 999px;
        border: 1px solid var(--border-soft);
        background: rgba(31, 111, 156, 0.08);
        color: var(--brand-dark);
        font-size: var(--chip);
        font-weight: 700;
        white-space: nowrap;
      }

      /* CONTENT: links Text + unten Features, rechts QR */
      .content {
        min-height: 0;
        display: grid;
        grid-template-columns: 1.25fr 0.75fr;
        gap: clamp(16px, 2.2vw, 28px);
        align-items: center;
      }

      .left {
        min-height: 0;
        display: grid;
        grid-template-rows: auto auto 1fr;
        gap: clamp(14px, 2vh, 18px);
      }

      .heroTitle {
        margin: 0;
        font-size: var(--title);
        font-weight: 900;
        line-height: 1.03;
        letter-spacing: 0.01em;
        max-width: 22ch;
      }

      .heroTitle span {
        display: block;
        color: var(--accent);
      }

      .lead {
        margin: 0;
        max-width: 78ch;
        font-size: var(--lead);
        color: var(--text-muted);
        line-height: 1.65;
      }

      .features {
        min-height: 0;
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: clamp(12px, 2vw, 18px);
        align-content: end; /* üëà sitzt ‚Äúunten‚Äù wie in deinem Screenshot */
      }

      .feature {
        background: var(--bg-surface);
        border-radius: var(--radius-lg);
        border: 1px solid var(--border-soft);
        box-shadow: 0 16px 40px rgba(15, 23, 42, 0.04);
        padding: clamp(14px, 2vh, 18px);
      }

      .feature h3 {
        margin: 0 0 0.45rem;
        font-size: var(--h3);
        letter-spacing: 0.12em;
        text-transform: uppercase;
        color: var(--text-main);
      }

      .feature p {
        margin: 0;
        font-size: var(--p);
        color: var(--text-muted);
        line-height: 1.5;
      }

      /* QR rechts: gro√ü und optisch mittig */
      .qrBlock {
        display: grid;
        place-items: center;
        gap: 12px;
        text-align: center;
        padding: clamp(6px, 1vw, 12px);
      }

      .qrBox {
        width: clamp(280px, 34vmin, 520px);  /* üëà gr√∂√üer */
        height: clamp(280px, 34vmin, 520px);
        border-radius: 26px;
        background: #fff;
        border: 1px solid var(--border-soft);
        box-shadow: 0 18px 50px rgba(15, 23, 42, 0.10);
        padding: clamp(14px, 1.2vmin, 18px);
        display: grid;
        place-items: center;
      }

      .qrBox img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        border-radius: 18px;
      }

      .qrText small {
        display: block;
        font-size: clamp(0.9rem, 1vw, 1.05rem);
        color: var(--text-muted);
      }

      .qrText strong {
        display: block;
        margin-top: 0.15rem;
        font-size: clamp(1rem, 1.1vw, 1.18rem);
        letter-spacing: 0.06em;
        text-transform: uppercase;
        color: var(--text-main);
        font-weight: 800;
      }

      /* FOOTER bleibt IM Card-Bereich und knackt nicht */
      .footer {
        border-top: 1px solid var(--border-soft);
        padding-top: clamp(10px, 1.6vh, 16px);
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 12px;
        flex-wrap: wrap;
        font-size: clamp(0.85rem, 1vw, 0.95rem);
        color: var(--text-muted);
      }

      .footer strong { color: var(--text-main); }

      /* Responsive */
      @media (max-width: 1100px) {
        .content {
          grid-template-columns: 1fr;
          align-items: start;
        }
        .qrBlock {
          place-items: center;
          padding-top: 0;
        }
        .features {
          grid-template-columns: 1fr;
          align-content: start;
        }
        .chips { justify-content: flex-start; }
        .header { flex-direction: column; align-items: flex-start; }
      }

      /* Extra kurz: bisschen enger */
      @media (max-height: 700px) {
        .chip { padding: 8px 10px; }
        .feature { padding: 12px; }
      }
    </style>
  </head>

  <body>
    <div class="stage">
      <main class="flyer" aria-label="Level Up Culture Flyer">
        <!-- HEADER -->
        <header class="header">
          <div class="brand">
            <div class="logo" aria-hidden="true">LU</div>
            <div class="brandText">
              <p class="brandName">Level Up Culture e.V.</p>
              <p class="brandTag">Gaming ¬∑ Kultur ¬∑ Community</p>
            </div>
          </div>

          <div class="chips" aria-label="Schwerpunkte">
            <span class="chip">Community Nights</span>
            <span class="chip">Workshops</span>
            <span class="chip">Events & Projekte</span>
          </div>
        </header>

        <!-- CONTENT -->
        <section class="content" aria-label="Inhalt">
          <div class="left">
            <div>
              <h1 class="heroTitle">
                Gemeinsam Kultur &amp; Gaming
                <span>auf das n√§chste Level bringen.</span>
              </h1>
              <p class="lead">
                Level Up Culture e.V. ist ein gemeinn√ºtziger Verein f√ºr Community, Gaming-Kultur und
                digitale Bildung. Wir schaffen R√§ume f√ºr Austausch, Workshops und kreative Projekte ‚Äî
                online und vor Ort.
              </p>
            </div>

            <div class="features" aria-label="Angebote">
              <article class="feature">
                <h3>Community</h3>
                <p>Offene Treffen, Community Nights und gemeinsames Erleben ‚Äî niedrigschwellig &amp; inklusiv.</p>
              </article>

              <article class="feature">
                <h3>Workshops</h3>
                <p>Medien, Streaming, Content Creation &amp; digitale Skills ‚Äî praxisnah und gemeinsam.</p>
              </article>

              <article class="feature">
                <h3>Events</h3>
                <p>Turniere, Themenabende, Kooperationen und Projekte, die Kultur &amp; Gaming verbinden.</p>
              </article>
            </div>
          </div>

          <div class="qrBlock" aria-label="QR Code">
            <div class="qrBox">
              <img
                src={`https://api.qrserver.com/v1/create-qr-code/?size=1100x1100&data=${encodeURIComponent(WEBSITE)}`}
                alt="QR-Code zur Level Up Culture Website"
              />
            </div>
        </section>


      </main>
    </div>
  </body>
</html>
