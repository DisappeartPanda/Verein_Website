    font-weight: 800;
    color: var(--text-main);
    margin-bottom: 1rem;
  }

  .about-title span {
    display: block;
    color: var(--accent);
  }

  .about-lead {
    font-size: 1.05rem;
    max-width: 40rem;
    color: var(--text-main);
    margin-bottom: 1.4rem;
  }

  .about-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .about-tags span {
    font-size: 0.8rem;
    padding: 0.35rem 0.75rem;
    border-radius: 999px;
    border: 1px solid var(--border-soft);
    background: rgba(255, 255, 255, 0.7);
  }

  .about-highlight {
    padding: 1.8rem 1.6rem;
    border-radius: 1.5rem;
    border: 1px solid var(--border-soft);
    background: #ffffff;
    box-shadow: var(--shadow-soft, 0 14px 40px rgba(15, 23, 42, 0.1));
  }

  .about-highlight h2 {
    margin-bottom: 0.8rem;
  }

  .about-highlight p + p {
    margin-top: 0.7rem;
  }

  .section-title {
    font-size: 1.6rem;
    margin-bottom: 0.4rem;
  }

  .section-text {
    max-width: 40rem;
    color: var(--text-muted);
    margin-bottom: 1.8rem;
  }

  .about-grid {
    display: grid;
    gap: 1.6rem;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  }

  .about-card {
    padding: 1.5rem 1.4rem;
    border-radius: 1.3rem;
    border: 1px solid var(--border-soft);
    background: #ffffff;
    box-shadow: 0 10px 30px rgba(15, 23, 42, 0.08);
  }

  .about-card h3 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }

  .about-card ul {
    padding-left: 1.1rem;
    margin: 0;
  }

  .about-card li {
    font-size: 0.95rem;
    margin-bottom: 0.35rem;
  }

  .section-soft {
    background: radial-gradient(circle at top left, rgba(148, 163, 255, 0.08), transparent 55%);
  }

  .about-two-col {
    display: grid;
    grid-template-columns: minmax(0, 1.4fr) minmax(0, 1fr);
    gap: 2rem;
    align-items: flex-start;
  }

  .about-values {
    margin-top: 0.7rem;
    font-size: 0.95rem;
  }

  .about-values span {
    display: inline-flex;
    align-items: center;
    padding: 0.25rem 0.7rem;
    border-radius: 999px;
    background: rgba(15, 23, 42, 0.04);
    margin-right: 0.4rem;
    margin-top: 0.3rem;
    font-size: 0.8rem;
  }

  .about-box {
    padding: 1.5rem 1.4rem;
    border-radius: 1.3rem;
    background: #ffffff;
    border: 1px solid var(--border-soft);
    box-shadow: 0 10px 30px rgba(15, 23, 42, 0.06);
  }

  .about-box h3 {
    margin-bottom: 0.5rem;
  }

  .about-box ul {
    padding-left: 1.1rem;
    margin: 0 0 0.6rem 0;
  }

  .about-box-note {
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  .section-cta {
    padding-top: 3rem;
  }

  .about-cta {
    padding: 1.8rem 1.6rem;
    border-radius: 1.5rem;
    background: linear-gradient(135deg, rgba(129, 140, 248, 0.12), rgba(56, 189, 248, 0.12));
    border: 1px solid rgba(148, 163, 255, 0.5);
    display: flex;
    flex-wrap: wrap;
    gap: 1.4rem;
    align-items: center;
    justify-content: space-between;
