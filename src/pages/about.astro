  }

  .about-cta-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
  }

  @media (max-width: 840px) {
    .about-two-col {
      grid-template-columns: minmax(0, 1fr);
    }
  }

  @media (max-width: 720px) {
    .about-hero {
      padding-top: 3rem;
    }

    .about-highlight,
    .about-box,
    .about-cta {
      padding: 1.4rem 1.2rem;
    }

    .about-grid {
      gap: 1.2rem;
    }
  }

    .section-roadmap {
    padding-top: 3rem;
  }

  .roadmap {
    position: relative;
    display: grid;
    gap: 1.8rem;
    margin-top: 1.5rem;
  }

  .roadmap-line {
    position: absolute;
    left: 18px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(
