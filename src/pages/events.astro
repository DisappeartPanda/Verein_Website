---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Events ‚Äì Level Up Culture e.V.">
  <main class="page page-events">
    {/* Hero / Intro */}
    <section class="section events-hero">
      <div class="section-inner section-inner-narrow">
        <p class="eyebrow">Events &amp; Termine</p>
        <h1 class="events-title">N√§chste Events &amp; Community-Termine</h1>
        <p class="events-lead">
